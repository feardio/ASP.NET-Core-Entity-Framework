@model Course2.Models.Produto


<h2>Cadastro de Produtos</h2>

<form class="form-horizontal" asp-controller="Produtos" asp-action="Salvar" method="POST">

    <div class="form-group">
        <label class="control-label col-sm-2" for="Id"></label>
        <div class="col-sm-10">
            <input type="hidden" asp-for="Id">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" for="nome">Nome:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Nome" placeholder="Entre com um nome">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Categoria"></label>
        <div class="col-sm-10">
            <input type="hidden" asp-for="Categoria">
        </div>
    </div>   
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Cadastrar</button>
        </div>
    </div>
</form>